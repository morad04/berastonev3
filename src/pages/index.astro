<style>
	:root {
		--neon-pink: #ff61ef;
		--neon-blue: #61efff;
		--neon-green: #61ff8d;
		--neon-yellow: #fff461;
	}

	* {
		cursor: url('/bear-cursor.svg'), auto !important;
	}

	main {
		margin: 0;
		padding: 2rem;
		background: #0a0a0a;
		min-height: 100vh;
		color: white;
		position: relative;
		padding-bottom: 100px;
	}

	.hero {
		text-align: center;
		padding: 4rem 0;
	}

	.neon-text {
		font-size: 4rem;
		color: var(--neon-pink);
		text-shadow: 0 0 10px var(--neon-pink),
					 0 0 20px var(--neon-pink),
					 0 0 30px var(--neon-pink);
		animation: neon-pulse 1.5s infinite alternate;
	}

	@keyframes neon-pulse {
		from {
			text-shadow: 0 0 10px var(--neon-pink),
						 0 0 20px var(--neon-pink),
						 0 0 30px var(--neon-pink);
		}
		to {
			text-shadow: 0 0 20px var(--neon-pink),
						 0 0 30px var(--neon-pink),
						 0 0 40px var(--neon-pink),
						 0 0 50px var(--neon-pink);
		}
	}

	.subtitle {
		font-size: 1.5rem;
		color: var(--neon-blue);
		margin-top: 1rem;
	}

	.stones-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
		gap: 2rem;
		padding: 2rem 0;
	}

	.stone-card {
		background: rgba(255, 255, 255, 0.1);
		border-radius: 15px;
		padding: 1rem;
		text-align: center;
		border: 2px solid var(--neon-green);
		box-shadow: 0 0 15px var(--neon-green);
		transition: transform 0.3s ease;
	}

	.stone-card:hover {
		transform: translateY(-10px);
	}

	.stone-card img {
		width: 100%;
		border-radius: 10px;
		margin-bottom: 1rem;
	}

	.stone-card h3 {
		color: var(--neon-yellow);
		margin: 0;
	}

	.roadmap {
		padding: 4rem 0;
	}

	.roadmap-timeline {
		display: flex;
		flex-direction: column;
		gap: 2rem;
		margin-top: 2rem;
		position: relative;
		padding-top: 20px;
	}

	.roadmap-timeline::before {
		content: '';
		position: absolute;
		left: 50%;
		transform: translateX(-50%);
		width: 4px;
		height: calc(100% - 40px);
		background: var(--neon-blue);
		box-shadow: 0 0 15px var(--neon-blue);
		top: 40px;
		z-index: -1;
	}

	.roadmap-item {
		background: #0a0a0a;
		border-radius: 15px;
		padding: 2rem;
		border: 2px solid var(--neon-blue);
		box-shadow: 0 0 15px var(--neon-blue);
		position: relative;
		width: 80%;
		margin: 0 auto;
		z-index: 1;
	}

	.milestone {
		position: absolute;
		top: -15px;
		left: 50%;
		transform: translateX(-50%);
		background: var(--neon-yellow);
		padding: 0.5rem 1rem;
		border-radius: 20px;
		color: #000;
		font-weight: bold;
		box-shadow: 0 0 15px var(--neon-yellow);
		z-index: 2;
	}

	.roadmap-item h3 {
		color: var(--neon-green);
		margin: 1rem 0;
		font-size: 1.5rem;
	}

	.roadmap-item ul {
		list-style: none;
		padding: 0;
		margin-top: 1rem;
	}

	.roadmap-item ul li {
		color: var(--neon-pink);
		margin: 0.5rem 0;
		padding-left: 1.5rem;
		position: relative;
	}

	.roadmap-item ul li::before {
		content: 'üêæ';
		position: absolute;
		left: 0;
	}

	.team {
		padding: 4rem 0;
	}

	.team-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
		gap: 2rem;
		margin-top: 2rem;
	}

	.team-member {
		text-align: center;
		background: rgba(255, 255, 255, 0.1);
		border-radius: 15px;
		padding: 1.5rem;
		border: 2px solid var(--neon-pink);
		box-shadow: 0 0 15px var(--neon-pink);
	}

	.team-member img {
		width: 150px;
		height: 150px;
		border-radius: 50%;
		margin-bottom: 1rem;
	}

	.team-member h3 {
		color: var(--neon-yellow);
		margin: 0;
	}

	.team-member p {
		color: var(--neon-blue);
		margin: 0.5rem 0 0 0;
	}

	h2 {
		text-align: center;
		font-size: 3rem;
		margin-bottom: 2rem;
	}

	.wl-button-container {
		text-align: center;
		margin: 4rem 0;
	}

	.neon-button {
		background: var(--neon-pink);
		color: white;
		padding: 1rem 2rem;
		border-radius: 30px;
		text-decoration: none;
		font-size: 1.2rem;
		text-transform: uppercase;
		letter-spacing: 2px;
		transition: all 0.3s ease;
		border: 2px solid var(--neon-pink);
		box-shadow: 0 0 15px var(--neon-pink);
	}

	.neon-button:hover {
		background: transparent;
		color: var(--neon-pink);
		box-shadow: 0 0 30px var(--neon-pink);
	}

	footer {
		position: absolute;
		bottom: 0;
		left: 0;
		right: 0;
		padding: 2rem;
		text-align: center;
	}

	.social-icons {
		display: flex;
		justify-content: center;
		gap: 2rem;
	}

	.social-icon {
		color: var(--neon-blue);
		transition: all 0.3s ease;
	}

	.social-icon:hover {
		color: var(--neon-pink);
		transform: scale(1.2);
	}
</style>