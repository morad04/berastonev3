<script>
	// Configuration
	const CONFIG = {
		PASSWORD: "1234",
	};

	// Password validation
	document.getElementById('submit-password')?.addEventListener('click', () => {
		const passwordInput = document.getElementById('password-input') as HTMLInputElement;
		const password = passwordInput.value;

		if (password === CONFIG.PASSWORD) {
			document.getElementById('password-section')?.classList.add('hidden');
			document.getElementById('whitelist-form')?.classList.remove('hidden');
		} else {
			const errorElement = document.getElementById('password-error');
			if (errorElement) {
				errorElement.textContent = 'Incorrect password. Please try again.';
			}
		}
	});

	// Form submission
	document.getElementById('submit-whitelist')?.addEventListener('click', async () => {
		const twitterHandle = (document.getElementById('twitter-handle') as HTMLInputElement).value;
		
		if (!twitterHandle) {
			alert('Please provide your Twitter handle.');
			return;
		}

		try {
			console.log('Submitting whitelist entry:', {
				twitterHandle
			});

			window.open('https://twitter.com/intent/tweet', '_blank');

			const formMessage = document.getElementById('form-message');
			if (formMessage) {
				formMessage.textContent = 'Successfully joined the whitelist! ðŸŽ‰';
				formMessage.style.color = 'var(--neon-green)';
			}
		} catch (error) {
			console.error('Error submitting form:', error);
			alert('Error submitting form. Please try again.');
		}
	});

	// Listen for wallet connection status changes
	window.addEventListener('message', (event) => {
		if (event.data.type === 'wallet-connection-status') {
			const submitButton = document.getElementById('submit-whitelist') as HTMLButtonElement;
			if (submitButton) {
				submitButton.disabled = !event.data.connected;
			}
		}
	});
</script>

<style>
	:root {
		--neon-pink: #ff61ef;
		--neon-blue: #61efff;
		--neon-green: #61ff8d;
		--neon-yellow: #fff461;
	}

	main {
		min-height: 100vh;
		background: #0a0a0a;
		color: white;
		padding: 2rem;
		position: relative;
		padding-bottom: 100px;
	}

	.container {
		max-width: 600px;
		margin: 0 auto;
		text-align: center;
	}

	.section {
		background: rgba(255, 255, 255, 0.1);
		border-radius: 15px;
		padding: 2rem;
		margin: 2rem 0;
		border: 2px solid var(--neon-blue);
		box-shadow: 0 0 15px var(--neon-blue);
	}

	.hidden {
		display: none;
	}

	input {
		width: 100%;
		padding: 0.8rem;
		margin: 1rem 0;
		background: rgba(255, 255, 255, 0.1);
		border: 2px solid var(--neon-pink);
		border-radius: 8px;
		color: white;
		font-family: var(--font-family-main);
	}

	input:focus {
		outline: none;
		border-color: var(--neon-yellow);
		box-shadow: 0 0 15px var(--neon-yellow);
	}

	.neon-button {
		background: var(--neon-pink);
		color: white;
		padding: 1rem 2rem;
		border: none;
		border-radius: 30px;
		font-size: 1rem;
		cursor: pointer;
		margin: 0.5rem;
		font-family: var(--font-family-main);
		text-decoration: none;
		display: inline-block;
		border: 2px solid var(--neon-pink);
		box-shadow: 0 0 15px var(--neon-pink);
		transition: all 0.3s ease;
	}

	.neon-button:hover:not(:disabled) {
		background: transparent;
		color: var(--neon-pink);
		box-shadow: 0 0 30px var(--neon-pink);
	}

	.neon-button:disabled {
		opacity: 0.5;
		cursor: not-allowed;
	}

	.error-message {
		color: var(--neon-pink);
		margin-top: 1rem;
	}

	.neon-text {
		font-size: 2.5rem;
		color: var(--neon-pink);
		text-shadow: 0 0 10px var(--neon-pink),
					 0 0 20px var(--neon-pink),
					 0 0 30px var(--neon-pink);
		margin-bottom: 2rem;
	}

	.back-button {
		margin-top: 2rem;
	}

	footer {
		position: absolute;
		bottom: 0;
		left: 0;
		right: 0;
		padding: 2rem;
		text-align: center;
	}

	.social-icons {
		display: flex;
		justify-content: center;
		gap: 2rem;
	}

	.social-icon {
		color: var(--neon-blue);
		transition: all 0.3s ease;
	}

	.social-icon:hover {
		color: var(--neon-pink);
		transform: scale(1.2);
	}

	#wallet-connect {
		margin: 1rem 0;
	}

	:global(.rainbow-button) {
		background: var(--neon-pink) !important;
		border: 2px solid var(--neon-pink) !important;
		box-shadow: 0 0 15px var(--neon-pink) !important;
		font-family: var(--font-family-main) !important;
	}

	:global(.rainbow-button:hover) {
		background: transparent !important;
		color: var(--neon-pink) !important;
		box-shadow: 0 0 30px var(--neon-pink) !important;
	}
</style>