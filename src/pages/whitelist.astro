---
import Layout from '../layouts/Layout.astro';
import WalletConnect from '../components/WalletConnect';
---

<Layout title="Bear Stones NFT - Whitelist">
	<main>
		<div class="container">
			<h1 class="neon-text">Bear Stones Whitelist</h1>
			
			<div id="password-section" class="section">
				<p>Enter the password to access the whitelist:</p>
				<input type="password" id="password-input" placeholder="Enter password" />
				<button id="submit-password" class="neon-button">Submit</button>
				<p id="password-error" class="error-message"></p>
			</div>

			<div id="whitelist-form" class="section hidden">
				<h2>Join the Whitelist</h2>
				<input type="text" id="twitter-handle" placeholder="Twitter Handle (e.g., @bearstonenft)" />
				<div id="wallet-connect">
					<WalletConnect client:load />
				</div>
				<button id="submit-whitelist" class="neon-button" disabled>Submit</button>
				<p id="form-message"></p>
