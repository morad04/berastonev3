---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Bear Stones NFT Collection - The Most Pawsome NFTs Ever!" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<link href="https://fonts.googleapis.com/css2?family=Press+Start+2P&display=swap" rel="stylesheet">
		<title>{title}</title>
	</head>
	<body>
		<slot />
	</body>
</html>
<style is:global>
	:root {
		--font-family-main: 'Press Start 2P', system-ui, sans-serif;
	}
	
	* {
		box-sizing: border-box;
		margin: 0;
		padding: 0;
	}
	
	html {
		font-family: var(--font-family-main);
		background: #0a0a0a;
		scroll-behavior: smooth;
	}

	body {
		min-height: 100vh;
	}
</style>